    <!-- 价格区间 -->
    <select id="queryByPrice" parameterType="double" resultType="int">
        select count(*)
        from tb_house h
        where h.housePrice between #{minPrice} and #{maxPrice}
    </select>

    <!-- 查询数据总数 -->
    <select id="queryCount" resultType="int">
        select count(*)
        from tb_house;
    </select>



